<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!-- if we want to have a custom select color. currently the default is the holo blue
          item name="android:actionBarItemBackground">
          @drawable/selectable_background_mymenu
        </item-->
        <item name="android:popupMenuStyle">@style/PopupMenu.Mymenu</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Mymenu
        </item>
        <item name="android:actionMenuTextColor">@color/logo
        </item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <!-- Action bar background -->
    <style parent="@android:style/Widget.Holo.Light.ActionBar" name="ActionBar.Transparent.Mymenu">
        <item name="android:background">@android:color/white</item>
        <!-- if we want the action bar to have the blue shadow or not ... drawable/ab_transparent_mymenu</item-->
        <item name="android:titleTextStyle">
            @style/MyTheme.ActionBar.TitleTextStyle
        </item>
    </style>

    <!-- Action bar text color -->
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/logo</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- background for the overflow menu -->
    <style parent="@android:style/Widget.Holo.Light.ListPopupWindow" name="PopupMenu.Mymenu">
        <item name="android:popupBackground">@android:color/white
        </item>
        <item name="android:alpha">0.05</item>
    </style>

</resources>
